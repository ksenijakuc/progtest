<div class="spcGrid">
    <!-- Breadcrumds -->
    <div class="state">
	<h2>{{menu_head}}</h2>
	Записи: <b>{{menu_head}}</b>
	&nbsp; / &nbsp; Записи: <b><все></b>
    </div>
    <!-- /Breadcrumds -->

    <form id="bannersForm" name="bannersForm" method="post" action="">

	<div class="toolBar">
	    <div class="toolBarContainer">
		<a href="/admin/news/add" title="создать новость" class="btMajor"><img src="{{image_path}}add.png" alt="[создать баннер]"><span>Новый</span></a>
	    </div>
	    <div class="toolBarContainer count" style="float:right">
		<span class="btDumb">Записей: <b>{{news_count}}</b></span>
	    </div>
	</div>

	<!-- Table Grid -->
	<table width="100%" cellpadding="0" cellspacing="1">
	    <tr>
		<th class="actionCol">Действия</th>
		<th class="orderCol">Активность</th>
		<th class="orderCol">Дата</th>
		<th style="text-align:left">Название</th>
		
	    </tr>
	    {{#news}}
	    <tr{{#even}} class="odd"{{/even}}>
		<td class="actionCol" valign="top" nowrap>
		    <a href="/admin/news/edit/{{id}}" title="изменить"><img src="{{image_path}}edit.png" alt="изменить" /></a>
		    <a href="#" title="удалить" class="delete_banner" rel="{{id}}"><img alt="удалить" src="{{image_path}}delete.png"></a>
		</td>
		<td class="orderCol" valign="top">
		    {{active}}
		</td>
		<td class="orderCol" valign="top">
		    {{date}}
		</td>
		<td>
		    {{{title}}}
		</td>
		
	    </tr>
	    {{/news}}
	</table>
	<!-- /Table Grid -->

	{{!Если нет новостей - выводим сообщение}}
	{{^news_count}}
	<div class="empty">[ нет новостей ]</div>
	{{/news_count}}

	<div class="toolBar">
	    <div class="toolBarContainer">
		<a href="/admin/news/add" title="создать новость" class="btMajor"><img src="{{image_path}}add.png" alt="[создать новость]"><span>Новый</span></a>
	    </div>
	    <div class="toolBarContainer count" style="float:right">
		<span class="btDumb">Записей: <b>{{news_count}}</b></span>
	    </div>
	</div>

	<input type="hidden" name="work_id" id="work_id" value="0"/>
	<input type="hidden" name="action" id="action" value="0"/>
    </form>

</div>